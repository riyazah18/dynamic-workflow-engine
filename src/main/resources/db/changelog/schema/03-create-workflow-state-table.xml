<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">


<changeSet id="0000000003" author="riyaz.ahmed">
        <createTable tableName="workflow_state">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" primaryKeyName="PK_WF_STATE"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="workflow_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="is_initial" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="is_end" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="workflow_state"
                baseColumnNames="workflow_id"
                constraintName="fk_workflow_state_workflow"
                referencedTableName="workflow"
                referencedColumnNames="id"/>
    </changeSet>

</databaseChangeLog>
